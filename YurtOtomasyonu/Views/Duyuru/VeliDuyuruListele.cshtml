@using YurtOtomasyonu.ViewModels.DuyuruListele
@model  DuyuruListeleViewModel
@{
    ViewBag.Title = "DuyuruListele";
    Layout = "~/Views/ThemeLayout/layout_veli.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <br />
        @foreach (var dy in Model.Duyurular)
        {

            <div class="col-md-3">
                <ul class="list-group">
                    <li class="list-group-item active">
                        @(dy.Konu)
                    </li>

                    <li class="list-group-item">

                      
                        @(dy.Duyuru)

                    </li>

                </ul>
            </div>




        }
    </div>
</div>
