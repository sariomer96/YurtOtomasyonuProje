@using YurtOtomasyonu.ViewModels.DisiplinListele
@model  DisiplinListeleViewModel
@{
    ViewBag.Title = "DisiplinListele";
    Layout = "~/Views/ThemeLayout/layout_one_theme.cshtml";
}

<h2>DisiplinListele</h2>

<div class="container-fluid">




    <div class="row">
        <div class="col-md-12">


            <hr />

          
            <br />
            <div class="col-md-3">

                <ul class="list-group">
                    <li class="list-group-item active">
                        AD-SOYAD
                    </li>
                    @foreach (var disiplin in Model.Disiplin)
                    {

                    <li class="list-group-item ">


                        @(disiplin.Ogrenciler.Adi + " " + disiplin.Ogrenciler.Soyadi)
                        @Html.ActionLink("Sil", "DisiplinSil", "Disiplin", new { disiplinID = disiplin.disiplin_ID }, new { @class = "btn btn-danger btn-xs" })





                    </li>
                    }
                </ul>

            </div>
            
            <div class="col-md-3">

                <ul class="list-group">
                    <li class="list-group-item active">
                        Konu
                    </li>
                    @foreach (var disiplin in Model.Disiplin)
                    {

                        <li class="list-group-item">



                            @disiplin.konu



                        </li>
                    }
                </ul>

            </div>
            <div class="col-md-3">

                <ul class="list-group">
                    <li class="list-group-item active">
                        Açıklama
                    </li>
                    @foreach (var disiplin in Model.Disiplin)
                    {

                        <li class="list-group-item">



                            @(disiplin.aciklama)



                        </li>
                    }
                </ul>

            </div>
            <br />












        </div>
    </div>
</div>
