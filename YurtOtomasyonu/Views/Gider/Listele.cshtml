                            @Html.ActionLink("Giderler", "Sil", "Gider", new { giderID = gider.gider_ID }, new { @class = "btn btn-light btn-xs" })
                            @(gider.su + " 0TL")



                        </li>

                    }
                </ul>

            </div>

            <div class="col-md-2">

                <ul class="list-group">
                    <li class="list-group-item active">
                        Personel Maaş
                    </li>
                    @foreach (var gider in Model.Giderler)
                    {

                        <li class="list-group-item">


                            @Html.ActionLink("Maas", "Sil", "Gider", new { giderID = gider.gider_ID }, new { @class = "btn btn-light btn-xs" })
                            @(gider.calisan_maas + " TL")



                        </li>

                    }
                </ul>

            </div>
            <div class="col-md-3">

                <ul class="list-group">
                    <li class="list-group-item active">
                        TARİH
                    </li>
                    @foreach (var gider in Model.Giderler)
