@using YurtOtomasyonu.ViewModels.GiderListele;
@model  GiderListViewModel
@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/ThemeLayout/layout_one_theme.cshtml";
}

<h2>Gider Listele</h2>

<div class="container-fluid">




    <div class="row">
        <div class="col-md-12">


            <hr />

            <div>
                &nbsp;&nbsp;&nbsp;&nbsp; @Html.ActionLink("Gider Ekle", "Ekle", "Gider", null, new { @class = "btn btn-primary" })

            </div>
            <br />

            <div class="col-md-2">

                <ul class="list-group">
                    <li class="list-group-item active">
                        Elektrik
                    </li>
                    @foreach (var gider in Model.Giderler)
                    {

                        <li class="list-group-item">


                            @Html.ActionLink("Sil", "Sil", "Gider", new { giderID = gider.gider_ID }, new { @class = "btn btn-danger btn-xs" })
                            @(gider.elektrik + " TL")



                        </li>

                    }
                </ul>

            </div>
            <div class="col-md-2">

                <ul class="list-group">
                    <li class="list-group-item active">
